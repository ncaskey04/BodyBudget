<div class="container">
	<div class="row grey">
		<p class="red-band"></p>
		<div class="">
			<div class="col-xs-9 course-time wire-one-large border-right"></div>
		</div>
		<div class="col-xs-3 form text-right">
			<%= form_tag 'javascript:void(0)', class: "getInfo" do %>
			<%= label_tag "recipe", "What do you want to eat?", class: "control-label" %>
			<%= text_field_tag '', nil, id:"recipe", placeholder: "Search", class: "recipeName form-control", autofocus: true %>
			<%= submit_tag ("Find Food"), class: "btn btn-success margin-top margin-bottom" %>
			<% end %>
		</div>
	</div>

	<div class="row margin-top-negative">
		<div class="canvas-holder col-lg-4 text-center border-white grey">
				<canvas id="chart-area" width="350" height="350"></canvas>
				<div class="cal-title">Cal</div>
				<div class="cal-caption">0</div>
		</div>
		<div class="canvas-holder col-lg-4 grey border-white text-center">
			<canvas id="bar-chart" width="350" height="350"></canvas>
		</div>
		<div class="canvas-holder col-lg-4 border-white grey"></div>
	</div>


	<div class="row">
		<h1 class="wire-one">Search Result:</h1>
		<div class="col-sm-12">
			<div class="user-data text-center">
				<img class="bowl" src="http://onnoodles.com/beta/images/onnoodles_icon_sm.png" alt="bowl">
			</div>
		</div>
	</div>
</div>
