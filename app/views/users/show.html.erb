<div class="container-fluid">
	<div class="row move-top green-bg position-fixed">
		<div class="col-sm-10 col-sm-offset-1">
			<div class="row grey">
				<div class="col-xs-4 text-center"><p class="course-time wire-one-large"></p><p class="cals wire-one-small"></p></div>
				<div class="cal-goal wire-one-small text-center col-xs-4"></div>
				<div class="col-xs-4 form text-right">
					<%= form_tag 'javascript:void(0)', class: "getInfo" do %>
					<%= label_tag "recipe", "What do you want to eat?", class: "control-label" %>
					<%= text_field_tag '', nil, id:"recipe", placeholder: "Search", class: "recipeName form-control", autofocus: true %>
					<%= submit_tag ("Find Food"), class: "btn btn-success margin-top margin-bottom" %>
					<% end %>
				</div>
			</div>

			<div class="row margin-top-negative">
				<div class="canvas-holder col-lg-4 border-green grey-box">
						<canvas class="pie-position" id="chart-area" width="350" height="350"></canvas>
						<div class="cal-title">Cal</div>
						<div class="cal-caption">0</div>
				</div>
				<div class="canvas-holder col-lg-4 grey-box border-green">
					<canvas id="bar-chart" width="350" height="350"></canvas>
				</div>
				<div class="canvas-holder col-lg-4 border-green grey-box">
					<p class="steps wire-one margin-top-small">STEPS taken: <span> </span></p>
					<p class="miles wire-one margin-top-small">MILES: <span> </span></p>
					<p class="wire-one margin-top-small">recent FOODS eaten:</p>
					<p class="food margin-top-small"><ul></ul></p>
				</div>
			</div>
		</div>
	</div>

	<div class="row green-band"></div>

	<div class="col-sm-10 col-sm-offset-1">
		<div class="row">
			<h1 class="wire-one">Search Result:</h1>
			<div class="col-xs-12">
				<div class="user-data text-center">
					<img class="bowl" src="http://sierrafire.cr.usgs.gov/images/loading.gif" alt="bowl">
				</div>
			</div>
		</div>
	</div>
</div>
